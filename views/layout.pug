doctype html
html
  head
    title Rahul Shah
    include includes/icon.pug
    link(rel="stylesheet", type="text/css", href="css/portfolio.css")
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css", integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3", crossorigin="anonymous")
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js", integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p", crossorigin="anonymous")
    script(src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js")
  body
    include includes/navbar.pug
    figure.text-center
      blockquote.blockquote
        // make the line below into a content injection
        p.h1
          if h1_text
            = h1_text
          else
            | Hi, I am Rahul. 
    div.container
      block layout-content
      br
      ul#contact-from-msg-box.list-group
      h4.text-center(class="contact-form-header") Contact Form
      form#contact-form(action="#" method='post')
        .input-group.mb-3
            input.form-control(id="first_name" type="text" name="first_name" placeholder="First Name" required)
            input.form-control(id="last_name" type="text" name="last_name" placeholder="Last Name" required)
        .mb-3
            label.form-label(for="email") From
            input.form-control(type="email" name="from" id="email" placeholder="name@example.com" required)
        .mb-3
            label.form-label(for="subject") Subject
            input.form-control(id="subject" name="subject" placeholder="" required)
        .mb-3
            label.form-label(for="text") Message
            textarea.form-control(id="text" name="text" rows="3" required)
        .mb3
            input#contactFormButton.btn.btn-primary.mb-3(type="submit" value="Send")
      include includes/footer.pug
    script(src="scripts/scrollToContactForm.js")
